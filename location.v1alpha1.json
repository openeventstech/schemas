{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://openevents.tech/location.v1aplha1.json",
    "title": "Location",
    "description": "An event location",
    "type": "object",
    "properties": {
        "kind": {
            "description": "The kind of resource that this object describes",
            "const": "location.openevents.tech/v1alpha1"
        },
        "name": {
            "type": "string"
        },
        "country": {
            "type": "string",
            "minLength": 3,
            "maxLength": 3
        },
        "region": {
            "type": "string"
        },
        "postalCode": {
            "type": "string"
        },
        "locality": {
            "type": "string"
        },
        "address": {
            "type": "string"
            }
        },
    "required": ["name", "country", "region", "postalCode", "locality", "address"]
}
